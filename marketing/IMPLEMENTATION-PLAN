  // ... (Zoom, Google Calendar, Calendly, Typeform, Webflow, WordPress, 
  // Shopify, Klaviyo, Notion, Airtable, Asana, Linear, GitHub, etc.)
];

export function getIntegrationBySlug(slug: string): Integration | undefined {
  return integrations.find(i => i.slug === slug);
}

export function getIntegrationsByCategory(category: string): Integration[] {
  return integrations.filter(i => i.category === category);
}

export function getPopularIntegrations(): Integration[] {
  return integrations.filter(i => i.popular);
}

export function getFeaturedIntegrations(): Integration[] {
  return integrations.filter(i => i.featured);
}

Mark complete when: Integrations database has 200+ integrations with metadata.

TASK 4.2: Create Dynamic Integration Page Template
File: app/integrations/[tool]/page.tsx

import { notFound } from 'next/navigation';
import { getIntegrationBySlug, integrations } from '@/lib/integrations';
import { OrganizationSchema, BreadcrumbSchema, FAQSchema } from '@/components/schema/SchemaMarkup';
import { Breadcrumbs } from '@/components/Breadcrumbs';
import Link from 'next/link';

// Generate static params for all integrations
export async function generateStaticParams() {
  return integrations.map(integration => ({
    tool: integration.slug,
  }));
}

// Generate metadata for each integration
export async function generateMetadata({ params }: { params: { tool: string } }) {
  const integration = getIntegrationBySlug(params.tool);
  
  if (!integration) {
    return {
      title: 'Integration Not Found',
    };
  }
  
  const capitalizedName = integration.name;
  
  return {
    title: `Cursive + ${capitalizedName} Integration | Sync Visitor Data Automatically`,
    description: `Connect Cursive visitor identification with ${capitalizedName}. ${integration.description}. Setup takes 2 minutes.`,
    openGraph: {
      title: `Cursive + ${capitalizedName} Integration`,
      description: integration.description,
      type: 'website',
    },
  };
}

export default function IntegrationPage({ params }: { params: { tool: string } }) {
  const integration = getIntegrationBySlug(params.tool);
  
  if (!integration) {
    notFound();
  }
  
  const capitalizedName = integration.name;
  
  const faqs = [
    {
      question: `How do I connect Cursive to ${capitalizedName}?`,
      answer: `Connect Cursive to ${capitalizedName} in Settings → Integrations. Click "${capitalizedName}" and follow the OAuth flow to authorize the connection. Setup takes 2 minutes.`
    },
    {
      question: `What data syncs from Cursive to ${capitalizedName}?`,
      answer: `Cursive syncs visitor name, email, phone, company, job title, pages viewed, time on site, and behavioral signals to ${capitalizedName}.`
    },
    {
      question: `How often does the integration sync?`,
      answer: `The Cursive + ${capitalizedName} integration syncs in real-time. Identified visitors appear in ${capitalizedName} within 1-5 seconds.`
    },
    {
      question: `Can I trigger workflows in ${capitalizedName} based on visitor behavior?`,
      answer: `Yes, you can trigger ${capitalizedName} workflows when visitors view specific pages, spend a certain amount of time, or match targeting criteria.`
    },
    {
      question: `Is the integration included in my Cursive plan?`,
      answer: `Yes, all integrations including ${capitalizedName} are included in every Cursive plan at no additional cost.`
    },
  ];
  
  const breadcrumbs = [
    { name: 'Home', href: '/' },
    { name: 'Integrations', href: '/integrations' },
    { name: capitalizedName, href: `/integrations/${params.tool}` },
  ];
  
  return (
    <>
      {/* Schema */}
      <OrganizationSchema />
      <BreadcrumbSchema items={breadcrumbs} />
      <FAQSchema faqs={faqs} />
      
      <Breadcrumbs items={breadcrumbs} />
      
      <article className="integration-page">
        <header className="hero">
          <div className="flex items-center gap-4">
            {integration.logo && (
              <img 
                src={integration.logo} 
                alt={`${capitalizedName} logo`}
                className="w-16 h-16"
              />
            )}
            <h1>Cursive + {capitalizedName} Integration</h1>
          </div>
          <p className="text-xl">
            {integration.description}
          </p>
        </header>
        
        <section>
          <h2>How the Cursive + {capitalizedName} Integration Works</h2>
          <p>
            The Cursive + {capitalizedName} integration automatically syncs 
            identified website visitors to {capitalizedName} in real-time, 
            enabling you to take immediate action on high-intent leads.
          </p>
          
          <ol>
            <li>
              <strong>Visitor lands on your website:</strong> Cursive's tracking 
              pixel identifies the visitor and enriches their profile with 
              contact data.
            </li>
            <li>
              <strong>Data syncs to {capitalizedName}:</strong> Within 1-5 seconds, 
              the visitor's information appears in {capitalizedName} as a new 
              contact, lead, or updated record.
            </li>
            <li>
              <strong>Workflows trigger automatically:</strong> Based on your 
              rules, {capitalizedName} can send emails, create tasks, update 
              deal stages, or notify your team.
            </li>
            <li>
              <strong>Your team takes action:</strong> Sales reps receive 
              notifications and can reach out while the visitor is still 
              researching.
            </li>
          </ol>
        </section>
        
        {integration.useCases && integration.useCases.length > 0 && (
          <section>
            <h2>Use Cases</h2>
            <p>
              Here's how companies use the Cursive + {capitalizedName} integration:
            </p>
            <ul>
              {integration.useCases.map((useCase, index) => (
                <li key={index}>{useCase}</li>
              ))}
            </ul>
          </section>
        )}
        
        {integration.setupSteps && integration.setupSteps.length > 0 && (
          <section>
            <h2>Setup Guide</h2>
            <p>
              Connect Cursive to {capitalizedName} in 4 easy steps:
            </p>
            <ol>
              {integration.setupSteps.map((step, index) => (
                <li key={index}>{step}</li>
