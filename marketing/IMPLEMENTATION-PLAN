TASK 4.3: Create Integrations Index Page
File: app/integrations/page.tsx

import { integrations, getIntegrationsByCategory, getPopularIntegrations } from '@/lib/integrations';
import { OrganizationSchema } from '@/components/schema/SchemaMarkup';
import Link from 'next/link';

export const metadata = {
  title: 'Cursive Integrations | Connect with 200+ Tools',
  description: 'Cursive integrates with Salesforce, HubSpot, Slack, Gmail, and 200+ other tools. Sync visitor data automatically to your existing stack.',
};

export default function IntegrationsPage() {
  const popularIntegrations = getPopularIntegrations();
  const categories = ['CRM', 'Email', 'Sales', 'Marketing', 'Productivity', 'Communication', 'Analytics', 'Other'];
  
  return (
    <>
      <OrganizationSchema />
      
      <div className="integrations-page">
        <header className="hero">
          <h1>Cursive Integrations</h1>
          <p className="text-xl">
            Connect Cursive with 200+ tools you already use. Sync visitor data 
            automatically to your CRM, send Slack alerts, trigger email campaigns, 
            and more.
          </p>
        </header>
        
        <section className="popular-integrations">
          <h2>Popular Integrations</h2>
          <div className="integration-grid">
            {popularIntegrations.map(integration => (
              <Link 
                key={integration.slug}
                href={`/integrations/${integration.slug}`}
                className="integration-card"
              >
                {integration.logo && (
                  <img src={integration.logo} alt={`${integration.name} logo`} />
                )}
                <h3>{integration.name}</h3>
                <p>{integration.description}</p>
              </Link>
            ))}
          </div>
        </section>
        
        {categories.map(category => {
          const categoryIntegrations = getIntegrationsByCategory(category);
          if (categoryIntegrations.length === 0) return null;
          
          return (
            <section key={category} className="category-section">
              <h2>{category} Integrations</h2>
              <div className="integration-grid">
                {categoryIntegrations.map(integration => (
                  <Link 
                    key={integration.slug}
                    href={`/integrations/${integration.slug}`}
                    className="integration-card"
                  >
                    {integration.logo && (
                      <img src={integration.logo} alt={`${integration.name} logo`} />
                    )}
                    <h3>{integration.name}</h3>
                    <p>{integration.description}</p>
                  </Link>
                ))}
              </div>
            </section>
          );
        })}
        
        <section className="cta">
          <h2>Don't See Your Tool?</h2>
          <p>
            We're constantly adding new integrations. If you don't see your tool, 
            let us know and we'll prioritize it.
          </p>
          <Link href="/contact" className="cta-button">
            Request an Integration
          </Link>
        </section>
      </div>
    </>
  );
}

