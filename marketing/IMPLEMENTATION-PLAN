export default async function ProductPage() {
  return (
    <>
      {/* Hero */}
      <section className="hero">
        <h1>[Feature Name]: [Benefit]</h1>
        <p className="text-xl">
          [2-3 sentence description of what this feature does and why it matters]
        </p>
        <div className="cta-buttons">
          <Link href="/free-audit">Get Free Audit</Link>
          <Link href="/pricing">See Pricing</Link>
        </div>
      </section>
      
      {/* Problem section */}
      <section className="problem">
        <h2>The Problem</h2>
        <p>[Describe the pain point this feature solves]</p>
        <ul>
          <li>[Specific problem 1]</li>
          <li>[Specific problem 2]</li>
          <li>[Specific problem 3]</li>
        </ul>
      </section>
      
      {/* Solution section */}
      <section className="solution">
        <h2>How [Feature] Solves This</h2>
        <p>[Describe the solution]</p>
        {/* Add visual/screenshot if available */}
      </section>
      
      {/* How it works */}
      <section className="how-it-works">
        <h2>How It Works</h2>
        <ol>
          <li><strong>Step 1:</strong> [Description]</li>
          <li><strong>Step 2:</strong> [Description]</li>
          <li><strong>Step 3:</strong> [Description]</li>
          <li><strong>Step 4:</strong> [Description]</li>
        </ol>
      </section>
      
      {/* Features/Benefits */}
      <section className="features">
        <h2>Key Features</h2>
        <div className="feature-grid">
          <div>
            <h3>[Feature 1]</h3>
            <p>[Description]</p>
          </div>
          {/* 5-8 features */}
        </div>
      </section>
      
      {/* Use cases */}
      <section className="use-cases">
        <h2>Use Cases</h2>
        <div className="use-case-grid">
          <div>
            <h3>[Use Case 1]</h3>
            <p>[Description of how this feature applies]</p>
          </div>
          {/* 3-5 use cases */}
        </div>
      </section>
      
      {/* Integration callout */}
      <section className="integrations">
        <h2>Works With Your Existing Stack</h2>
        <p>
          Cursive integrates with <Link href="/integrations/salesforce">Salesforce</Link>, 
          <Link href="/integrations/hubspot">HubSpot</Link>, 
          <Link href="/integrations/slack">Slack</Link>, and 
          <Link href="/integrations">200+ other tools</Link>.
        </p>
      </section>
      
      {/* Related features */}
      <section className="related">
        <h2>Related Features</h2>
        <div className="related-grid">
          <Link href="/[related-feature-1]">
            <h3>[Feature Name]</h3>
            <p>[One-line description]</p>
          </Link>
          {/* 2-3 related features */}
        </div>
      </section>
      
      {/* FAQ */}
      <section className="faq">
        <h2>Frequently Asked Questions</h2>
        {/* 5-8 FAQs specific to this feature */}
      </section>
      
      {/* Final CTA */}
      <section className="cta">
        <h2>Ready to Get Started?</h2>
        <Link href="/free-audit">Get Your Free AI Audit</Link>
      </section>
    </>
  );
}

Blog Post Pages (app/blog/[slug]/page.tsx)
// This must use generateMetadata for dynamic posts
export async function generateMetadata({ params }: { params: { slug: string } }) {
  // Fetch post data server-side
  const post = await getPostBySlug(params.slug);
  
  if (!post) {
    return {
      title: 'Post Not Found',
    };
  }
  
  return {
    title: `${post.title} | Cursive Blog`,
    description: post.excerpt || post.description,
    openGraph: {
      title: post.title,
      description: post.excerpt || post.description,
      type: 'article',
      publishedTime: post.publishedAt,
      authors: ['Cursive Team'],
      images: post.image ? [{ url: post.image }] : [],
    },
    twitter: {
      card: 'summary_large_image',
      title: post.title,
      description: post.excerpt || post.description,
      images: post.image ? [post.image] : [],
    },
  };
}

export default async function BlogPost({ params }: { params: { slug: string } }) {
  const post = await getPostBySlug(params.slug);
  
  if (!post) {
    return <div>Post not found</div>;
  }
  
  return (
    <>
      {/* Breadcrumbs */}
      <Breadcrumbs items={[
        { name: 'Home', href: '/' },
        { name: 'Blog', href: '/blog' },
        { name: post.title, href: `/blog/${params.slug}` }
      ]} />
      
      {/* Article Schema */}
      <script
        type="application/ld+json"
        dangerouslySetInnerHTML={{
          __html: JSON.stringify({
            '@context': 'https://schema.org',
            '@type': 'Article',
            headline: post.title,
            description: post.excerpt || post.description,
            image: post.image,
            datePublished: post.publishedAt,
            dateModified: post.updatedAt || post.publishedAt,
            author: {
              '@type': 'Organization',
              name: 'Cursive',
              url: 'https://meetcursive.com',
            },
            publisher: {
              '@type': 'Organization',
              name: 'Cursive',
              url: 'https://meetcursive.com',
            },
          }),
        }}
      />
      
      {/* Article content */}
      <article>
        <header>
          <h1>{post.title}</h1>
          <p className="text-gray-600">
            Published {new Date(post.publishedAt).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </p>
        </header>
        
        <div className="prose">
          {/* Render post content - must be server-side */}
          {post.content}
        </div>
        
        {/* Related posts */}
        <section className="related-posts">
          <h2>Related Articles</h2>
          {/* Show 3-4 related posts with links */}
        </section>
        
        {/* CTA */}
        <section className="cta">
          <h2>Ready to Identify Your Website Visitors?</h2>
          <Link href="/free-audit">Get Your Free AI Audit</Link>
        </section>
      </article>
    </>
  );
}

