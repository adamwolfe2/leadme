export interface Integration {
  slug: string;
  name: string;
  category: 'CRM' | 'Email' | 'Sales' | 'Marketing' | 'Productivity' | 'Communication' | 'Analytics' | 'Other';
  description: string;
  logo?: string;
  popular?: boolean;
  featured?: boolean;
  useCases?: string[];
  setupSteps?: string[];
}

